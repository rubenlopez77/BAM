{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@support/*": ["support/*"],
      "@helpers/*": ["helpers/*"],
      "@tests/*": ["tests/*"],

    }
  },
 "include": ["tests/**/*", "helpers/**/*", "support/**/*"]
}
